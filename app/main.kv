<ErrorDialog>:
    title: "NOTICE"
    font_size: 32
    size_hint: None, None
    size: 400, 250
    auto_dismiss: True
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            Label:
                font_size: 18
                align: 'center'
                background_color: (0,0,0,1)
                text: "Please select correct excellon file"
            BoxLayout:
                orientation: "horizontal"
                Button:
                    size_hint: 0.5, 0.5
                    text: "OK"
                    on_release: root.dismiss()
